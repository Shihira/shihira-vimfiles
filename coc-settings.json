{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": ["compile_commands.json"]
        },
        "pyls": {
            "command": "pyls",
            "filetypes": ["python"],
            "initializationOptions": {
            }
        },
        "rls": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        }
    },
    "list.source.files": {
        "excludePatterns": [
        ],
        "command": "rg",
        "args": [
            "--follow",
            "--color", "never",
            "--files",

            "--glob", "!*.meta"
        ]
    }
}
