{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["-log=verbose", "--header-insertion=never"],
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": ["compile_commands.json"]
        },
        "pyls": {
            "command": "pyls",
            "filetypes": ["python"],
            "settings": {
            }
        },
        "pylsp": {
            "command": "pylsp",
            "filetypes": ["python"],
            "settings": {
                "pylsp.plugins.pycodestyle.ignore": ["E501", "E302", "E305", "W391"]
            }
        },
        "rls": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [ "build/" ],
            "initializationOptions": { "buildDirectory": "build" }
        }
    },
    "suggest": {
        "timeout": 30000,
        "snippetsSupport": false
    },
    "list": {
        "source": {
            "mru.excludePatterns": ["**\\AppData\\Local\\Temp\\*"]
        }
    }
}

