{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": ["compile_commands.json"]
        },
        "pyls": {
            "command": "pylsp",
            "filetypes": ["python"],
            "initializationOptions": {
            }
        },
        "rls": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [ "build/" ],
            "initializationOptions": { "buildDirectory": "build" }
        }
    },
    "list.source.files": {
        "excludePatterns": [
        ],
        "command": "rg",
        "args": [
            "--follow",
            "--color", "never",
            "--files",

            "--glob", "*.cpp",
            "--glob", "*.h",
            "--glob", "*.ush",
            "--glob", "*.usf",
            "--glob", "!*Engine/Source/ThirdParty/*",
            "--glob", "!*Saved/*",
            "--glob", "!*Templates/*"
        ]
    },
    "list.source.grep": {
        "excludePatterns": [
        ],
        "command": "rg",
        "args": [
            "--follow",
            "--color", "never",

            "--glob", "*.cpp",
            "--glob", "*.h",
            "--glob", "*.ush",
            "--glob", "*.usf",
            "--glob", "!*Engine/Source/ThirdParty/*",
            "--glob", "!*Saved/*",
            "--glob", "!*Templates/*"
        ]
    }
}

